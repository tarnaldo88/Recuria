@page "/bootstrap"
@inject Recuria.Blazor.Services.AuthState Auth
@inject Recuria.Blazor.Services.App.IBootstrapAppService BootstrapService
@inject NavigationManager Nav

<PageTitle>Dev Bootstrap</PageTitle>

<MudStack Spacing="3">
    <MudText Class="bootstrap-title" Typo="Typo.h4">Bootstrap</MudText>
    <MudText Typo="Typo.body2" Color="Color.Secondary">
        Create a tenant and seed your first owner account.
    </MudText>

    @if (!string.IsNullOrEmpty(_validationMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Dense="true">
            @_validationMessage
        </MudAlert>
    }

    <MudPaper Class="pa-5 bootstrap-shell" e;Elevation="0" Style="border:1px solid #E2E8F0; max-width: 760px;">
        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="_orgName"
                    Label="Organization Name"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_ownerName"
                    Label="Owner Name"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_email"
                              Label="Owner Email"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              InputType="InputType.Email"
                              Required="true" />
            </MudItem>
            <MudItem xs="12" Class="bootstrap-actions">
                <MudStack Row="true" Spacing="2">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               OnClick="RunBootstrap"
                               Disabled="@_submitting"
                               StartIcon="@Icons.Material.Filled.RocketLaunch">
                        @(_submitting ? "Bootstrapping..." : "Bootstrap Tenant")
                    </MudButton>

                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Default"
                               Href="/dashboard"
                               Disabled="@_submitting">
                        Cancel
                    </MudButton>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudPaper>
      
</MudStack>

@code {
    private string _orgName = "Acme Inc";
    private string _email = "owner@recuria.local";
    private string _ownerName = "Owner One";
    private string? _validationMessage;
    private bool _submitting;

    private async Task RunBootstrap()
    {
        _validationMessage = null;

        if (string.IsNullOrWhiteSpace(_orgName) ||
            string.IsNullOrWhiteSpace(_ownerName) ||
            string.IsNullOrWhiteSpace(_email))
        {
            _validationMessage = "Organization name, owner name, and email are required.";
            return;
        }

        _submitting = true;

        try
        {
            var result = await BootstrapService.BootstrapAsync(new Recuria.Client.BootstrapRequest
            {
                OrganizationName = _orgName.Trim(),
                OwnerEmail = _email.Trim(),
                OwnerName = _ownerName.Trim()
            });

            if (!result.Success || result.Data is null)
            {                
                return;
            }

            if (string.IsNullOrWhiteSpace(result.Data.Token) || result.Data.OrganizationId == Guid.Empty)
            {
                _validationMessage = "Bootstrap failed: missing token or org id.";
                return;
            }

            await Auth.SetAuthAsync(result.Data.Token, result.Data.OrganizationId.ToString());
            Nav.NavigateTo("/dashboard");
        }
        finally
        {
            _submitting = false;
        }
    }
}

