@page "/bootstrap"
@inject Recuria.Blazor.Services.AuthState Auth
@inject Recuria.Blazor.Services.App.IBootstrapAppService BootstrapService
@inject NavigationManager Nav

<PageTitle>Dev Bootstrap</PageTitle>

<MudStack Spacing="3">
    <MudText Class="bootstrap-title" Typo="Typo.h4">Bootstrap</MudText>
    <MudText Typo="Typo.body2" Color="Color.Secondary">
        Create a tenant and seed your first owner account. Use these credentials on the Login page.
    </MudText>

    @if (!string.IsNullOrEmpty(_validationMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Dense="true">
            @_validationMessage
        </MudAlert>
    }

    <MudPaper Class="pa-5 bootstrap-shell" Elevation="0" Style="border:1px solid #E2E8F0; max-width: 760px;">
        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="_orgName"
                    Label="Organization Name"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_ownerName"
                    Label="Owner Name"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_email"
                              Label="Owner Email"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              InputType="InputType.Email"
                              Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_ownerPassword"
                              Label="Owner Password"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              InputType="InputType.Password"
                              Required="true" />
            </MudItem>
            <MudItem xs="12" Class="bootstrap-actions">
                <MudStack Row="true" Spacing="2">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               OnClick="RunBootstrap"
                               Disabled="@_submitting"
                               StartIcon="@Icons.Material.Filled.RocketLaunch">
                        @(_submitting ? "Bootstrapping..." : "Bootstrap Tenant")
                    </MudButton>

                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Default"
                               Href="/dashboard"
                               Disabled="@_submitting">
                        Cancel
                    </MudButton>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (_lastBootstrap is not null)
    {
        <MudPaper Class="pa-4" Elevation="0" Style="border:1px solid #C7E7D6; max-width: 760px;">
            <MudText Typo="Typo.h6">Login Helper</MudText>
            <MudText Typo="Typo.body2"><b>Organization Name:</b> @_lastBootstrap.OrganizationName</MudText>
            <MudText Typo="Typo.body2"><b>Organization ID:</b> @_lastBootstrap.OrganizationId</MudText>
            <MudText Typo="Typo.body2"><b>Email:</b> @_lastBootstrap.Email</MudText>
            <MudText Typo="Typo.body2"><b>Password:</b> @_lastBootstrap.Password</MudText>

            <MudStack Row="true" Spacing="2" Class="mt-3">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => Nav.NavigateTo("/login"))">
                    Go To Login
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="ContinueAsSeededOwner">
                    Continue As Seeded Owner
                </MudButton>
            </MudStack>
        </MudPaper>
    }

</MudStack>

@code {
    private sealed record BootstrapLoginHelper(
        string OrganizationName,
        string OrganizationId,
        string Email,
        string Password,
        string Token);

    private string _orgName = "Acme Inc";
    private string _email = "owner@recuria.local";
    private string _ownerName = "Owner One";
    private string _ownerPassword = "P@ssword123!";
    private string? _validationMessage;
    private bool _submitting;
    private BootstrapLoginHelper? _lastBootstrap;

    private async Task RunBootstrap()
    {
        if (!System.Net.Mail.MailAddress.TryCreate(_email, out _))
        {
            _validationMessage = "Enter a valid email address.";
            return;
        }
        _validationMessage = null;

        if (string.IsNullOrWhiteSpace(_orgName) ||
            string.IsNullOrWhiteSpace(_ownerName) ||
            string.IsNullOrWhiteSpace(_email) ||
            string.IsNullOrWhiteSpace(_ownerPassword))
        {
            _validationMessage = "Organization name, owner name, email, and password are required.";
            return;
        }

        if (_ownerPassword.Length < 8)
        {
            _validationMessage = "Password must be at least 8 characters.";
            return;
        }

        if (!System.Net.Mail.MailAddress.TryCreate(_email, out _))
        {
            _validationMessage = "Enter a valid email address.";
            return;
        }

        _submitting = true;

        try
        {
            var result = await BootstrapService.BootstrapAsync(new Recuria.Client.BootstrapRequest
            {
                OrganizationName = _orgName.Trim(),
                OwnerEmail = _email.Trim(),
                OwnerName = _ownerName.Trim(),
                OwnerPassword = _ownerPassword
            });

            if (!result.Success || result.Data is null)
            {                
                return;
            }

            if (string.IsNullOrWhiteSpace(result.Data.Token) || result.Data.OrganizationId == Guid.Empty)
            {
                _validationMessage = "Bootstrap failed: missing token or org id.";
                return;
            }
            _lastBootstrap = new BootstrapLoginHelper(
                _orgName.Trim(),
                result.Data.OrganizationId.ToString(),
                _email.Trim(),
                _ownerPassword,
                result.Data.Token);
        }
        finally
        {
            _submitting = false;
        }
    }

    private async Task ContinueAsSeededOwner()
    {
        if (_lastBootstrap is null)
            return;

        await Auth.SetAuthAsync(_lastBootstrap.Token, _lastBootstrap.OrganizationId);
        Nav.NavigateTo("/dashboard");
    }
}

