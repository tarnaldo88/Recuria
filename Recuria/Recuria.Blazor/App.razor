@inject Recuria.Blazor.Services.AuthState Auth
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Nav

<Router AppAssembly="@typeof(App).Assembly" OnNavigateAsync="GuardNavigation">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private static readonly HashSet<string> PublicRoutes = new(StringComparer.OrdinalIgnoreCase)
    {
        "",
        "login",
        "bootstrap",
        "register"
    };

    private async Task GuardNavigation(Microsoft.AspNetCore.Components.Routing.NavigationContext _)
    {
        var path = Nav.ToBaseRelativePath(Nav.Uri).Trim('/');
        if (path.Contains('?'))
            path = path[..path.IndexOf('?')];

        if (PublicRoutes.Contains(path))
            return;

        if (!await Auth.IsAuthenticatedAsync())
        {
            var returnUrl = "/" + path;
            Nav.NavigateTo($"/login?returnUrl={Uri.EscapeDataString(returnUrl)}", forceLoad: false);
        }
    }
}
