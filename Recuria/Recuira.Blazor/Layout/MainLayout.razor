@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="ToggleDrawer" />
        <MudStack>
            <MudText Typo="Typo.h6">Recuria</MudText>
            <MudImage Src="images/smallRecuriaLogo.png"
                Alt="Recuria Logo"
                Width="22"
                Height="22"
                Class="app-logo" />
        </MudStack>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Variant="DrawerVariant.Responsive" Elevation="1">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private readonly MudTheme _theme = new()
    {
        Typography = new Typography
        {
            Default = new DefaultTypography { FontFamily = new[] { "Public Sans", "Segoe UI", "sans-serif" } }
        },
        PaletteLight = new PaletteLight
        {
            Primary = "#0B6E4F",
            Secondary = "#FFB703",
            Background = "#7b8b7eff",
            AppbarBackground = "#0f2a14ff",
            AppbarText = "#F8FAFC",
            DrawerBackground = "#FFFFFF",
            DrawerText = "#0f2a10ff"
        }
    };

    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}
