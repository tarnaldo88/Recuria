@page "/ops"
@inject Recuria.Client.IRecuriaApiClient Api
@using System.Globalization

<PageTitle>Ops</PageTitle>

<MudStack Spacing="3">
    <MudText Typo="Typo.h4" Style="color:#ffff">Ops</MudText>

    @if(!string.IsNullOrWhiteSpace(_error))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Dense="true">@_error</MudAlert>
    }

    @if (!string.IsNullOrWhiteSpace(_info))
    {
        <MudAlert Severity="Severity.Success" Dense="true">@_info</MudAlert>
    }

    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
        <MudNumericField T="int" @bind-Value="_take" Min="1" Max="200" Label="Rows" Variant="Variant.Outlined" />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadDeadLettered" Disabled="_busy">Load</MudButton>
    </MudStack>

    <MudCard>
        <MudCardContent>
            @if (_loading)
            {
                <MudSkeleton Height="160px" Width="100%" />
            }
            else
            {
                <MudTable T="Recuria.Client.DeadLetteredOutboxItem" Items="_items" Dense="true" Hover="true">
                    <HeaderContent>
                        <MudTh>Dead-Lettered</MudTh>
                        <MudTh>Type</MudTh>
                        <MudTh>Retries</MudTh>
                        <MudTh>Error</MudTh>
                        <MudTh></MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd>@context.DeadLetteredOnUtc.ToLocalTime().ToString("g", CultureInfo.CurrentCulture)</MudTd>
                        <MudTd>@context.Type</MudTd>
                        <MudTd>@context.RetryCount</MudTd>
                        <MudTd>@context.Error</MudTd>
                        <MudTd>
                            <MudButton Variant="Variant.Text" Color="Color.Primary" Disabled="_busy" OnClick="@(() => Retry(context.Id))">
                                Retry
                            </MudButton>
                        </MudTd>
                    </RowTemplate>
                    <NoRecordsContent>
                        <MudText Typo="Typo.body2">No dead-lettered messages.</MudText>
                    </NoRecordsContent>
                </MudTable>
            }
        </MudCardContent>
    </MudCard>
 </MudStack>

@code {
    private bool _loading = true;
    private bool _busy;
    private int _take = 50;
    private string? _error;
    private string? _info;
    private List<Recuria.Client.DeadLetteredOutboxItem> _items = new();

    protected override async Task OnInitializedAsync() => await LoadDeadLettered();

    private async Task LoadDeadLettered()
    {
        _loading = true;
        _error = null;
        _info = null;

        try
        {
            var result = await Api.DeadLetteredAsync(_take);
            _items = result.OrderByDescending(XAxisLabelPosition => XAxisLabelPosition.DeadLetteredOnUtc).ToList();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task Retry(Guid id)
    {
        _busy = true;
        _error = null;
        _info = null;
        try
        {
            await Api.RetryAsync(id);
            _info = "Message requeued.";
            await LoadDeadLettered();
        }
        catch (Recuria.Client.ApiException ex) when (ex.StatusCode == 204) // stale client expecting 200
        {
            _info = "Message requeued.";
            await LoadDeadLettered();
        }
        catch (Exception ex) { _error = ex.Message; }
        finally { _busy = false; }
    }
}
