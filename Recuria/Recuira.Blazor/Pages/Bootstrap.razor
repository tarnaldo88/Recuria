@page "/bootstrap"
@inject Recuira.Blazor.Services.AuthState Auth
@inject Recuria.Client.IRecuriaApiClient Api
@inject NavigationManager Nav

<h3>Dev Bootstrap</h3>

@if (!string.IsNullOrEmpty(_error))
{
    <p class="text-danger">@error</p>
}

<div>
    <label>Org Name</label>
    <input tabindex="_orgName" />
</div>

<div>
    <label>Owner Name</label>
    <input bind="_ownerName" />
</div>
<button onclick="Bootstrap">Bootstrap</button>

@code {
    private string _orgName = "Acme Inc";
    private string _email = "owner@Recuria.local";
    private string _ownerName = "Owner One";
    private string? _error;

    private async Task Bootstrap()
    {
        _error = null;

        try
        {
            var result = await Api.DevBootstrapAsync(new Recuira.Client.BootstrapRequest
            {
                OrganizationName = _orgName,
                OwnerEmail = _email,
                OwnerName = _ownerName
            });
        }
        catch(Exception ex)
        {
            _error = ex.Message;
        }
    }

}
