@page "/bootstrap"
@inject Recuira.Blazor.Services.AuthState Auth
@inject Recuria.Client.IRecuriaApiClient Api
@inject NavigationManager Nav

<PageTitle>Dev Bootstrap</PageTitle>

<MudStack Spacing="3">
    <MudText Typo="Typo.h4">Bootstrap</MudText>
    <MudText Typo="Typo.body2" Color="Color.Secondary">
        Create a tenant and seed your first owner account.
    </MudText>

    @if (!string.IsNullOrEmpty(_error))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Dense="true">
            @_error
        </MudAlert>
    }

    <MudPaper Class="pa-5" e;Elevation="0" Style="border:1px solid #E2E8F0; max-width: 760px;">
        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="_orgName"
                    Label="Organization Name"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_ownerName"
                    Label="Owner Name"
                    Variant="Variant.Outlined"
                    Margin="Margin.Dense"
                    Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_email"
                              Label="Owner Email"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              InputType="InputType.Email"
                              Required="true" />
            </MudItem>
        </MudGrid>
    </MudPaper>
      
</MudStack>



<div>
    <label>Org Name</label>
    <input @bind="_orgName" />
</div>
<div>
    <label>Owner Email</label>
    <input @bind="_email" />
</div>
<div>
    <label>Owner Name</label>
    <input @bind="_ownerName" />
</div>
<button @onclick="RunBootstrap">Bootstrap</button>

@code {
    private string _orgName = "Acme Inc";
    private string _email = "owner@recuria.local";
    private string _ownerName = "Owner One";
    private string? _error;

    private async Task RunBootstrap()
    {
        _error = null;
        try
        {
            var result = await Api.BootstrapAsync(new Recuria.Client.BootstrapRequest
            {
                OrganizationName = _orgName,
                OwnerEmail = _email,
                OwnerName = _ownerName
            });

            if (string.IsNullOrWhiteSpace(result.Token) || result.OrganizationId == Guid.Empty)
            {
                _error = "Bootstrap failed: missing token or org id.";
                return;
            }

            await Auth.SetAuthAsync(result.Token, result.OrganizationId.ToString());
            Nav.NavigateTo("/dashboard");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }
}
